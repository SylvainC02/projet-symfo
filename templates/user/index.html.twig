{% extends 'base.html.twig' %}

{% block title %}Mon compte
{% endblock %}

{% block body %}
{% for message in app.flashes('success') %}
		<div class="alert alert-success">
			{{ message }}
		</div>
	{% endfor %}
	<div class="container">
		{% block accountTitle %}
		<h2 class="m-2 text-center">Mon compte</h2>
		{% endblock %}

		<div class="row">
		<div class="col-2 p-0">
			<div class="list-group list-group-flush">
				<a href=" {{path('app_user')}} " class="list-group-item list-group-item-action d-flex justify-content-between py-3">Accueil <i class="bi bi-house"></i></a>
				<a href="{{path('app_add_item')}}" class="list-group-item list-group-item-action d-flex justify-content-between py-3">Ajouter un objet <i class="bi bi-plus-circle"></i></a>
				<a href="" class="list-group-item list-group-item-action d-flex justify-content-between py-3">Mes objets <i class="bi bi-list"></i></a>
				<a href="" class="list-group-item list-group-item-action d-flex justify-content-between py-3">Mes réservations <i class="bi bi-list"></i></a>
				<a href="{{path('app_infos')}}" class="list-group-item list-group-item-action d-flex justify-content-between py-3">Mes infos <i class="bi bi-person-circle"></i></a>
				<a href=" {{path('app_logout')}} " class="list-group-item list-group-item-action d-flex justify-content-between py-3">Déconnexion  <i class="bi bi-door-open"></i></a>
			</div>
		</div>
		<div class="col-10 border-start">
			{% block utility %}
				<p>Bienvenue. Ici, vous pouvez ajouter des articles, modifier votre compte, voir vos réservations...</p>
			{% endblock %}
		</div>

		</div>

	</div>
{% endblock %}
