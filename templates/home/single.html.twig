{% extends 'base.html.twig' %}

{% block title %}Hello HomeController!
{% endblock %}

{% block body %}
<div class="container">
    <div class="row">
        <div class="col-12">
			
				<h1 style="text-align:center;">{{categorie.name|upper}}</h1>
                <div class="col-6 offset-3">
  					<img class="card-img" src="{{asset('assets/images/')}}{{categorie.image}}" alt="Card-categorie">
                </div>
		</div>

    <div class="row"><h2>Objets de cette catégorie :</h2></div>
        
    <div class="row">
        {% for objet in categorie.objets %}
        <div class="col-3 mb-3">
			
 


				<div class="card mx-2  p-0 shadow h-70 d-flex flex-column " style="width: 16rem">
					<img src="{{asset('assets/images/')}}{{objet.image}}" class="card-img-top flex-shrink-1"style="max-height:300px"  alt="{{objet.image}}">
					<div>
						<div class="card-body  p-1">
							<h5 class="card-title  fw-bold text-center ">{{ objet.name }}</h5>
							<div class="">
								<p class="card-text text-center ">{{ objet.description|raw}}</p>
							</div>

						</div>
					</div>
					<div class="h-100 d-flex flex-column justify-content-end">
						<div class="text-center p-3">
						{% if objet.isAvailable %}
							<a href="{{ path('objet', {'id': objet.id}) }}" class="card-link btn btn-warning w-100">Voir l'objet</a>

							{% else %}
							<a href="{{ path('objet', {'id': objet.id}) }}" class="card-link btn btn-danger w-100">Voir l'objet</a>
						{% endif %}
							
						</div>
						<div class="card-footer">
							Catégorie : <a href="{{path('single_home', {id: objet.categorie.id })}}">{{objet.categorie|upper}}</a>
						</div>
					</div>
				</div>

		</div>
        {% endfor %}
			
	</div>
</div>

{% endblock %}