{% extends 'base.html.twig' %}

{% block title %}Les articles
{% endblock %}

{% block body %}
	<div class="container">
		<div class="row">
			{% for objet in listObjets %}
				<div class="col col-md-3 col-lg-2">
					<div class="card" style="width: 18rem;">
						<img src=" {{asset('assets/images/' ~ objet.image)}} " class="card-img-top" alt="{{objet.name}}">
						<div class="card-body">
							<h5 class="card-title">
								{{objet.name}}
							</h5>
							<p class="card-text">
								{{objet.description|raw}}
							</p>

							<a href=" {{path('app_single_objet', {id:objet.id})}} " class="btn btn-primary">Voir en d√©tail</a>
							{% if objet.isAvailable %}
								<span class="bg-success">
									Disponible
								</span>
							{% endif %}
						</div>
					</div>
				</div>
			{% endfor %}
		</div>
	</div>
{% endblock %}
